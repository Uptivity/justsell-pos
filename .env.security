# CRITICAL SECURITY CONFIGURATION - CHANGE ALL VALUES IN PRODUCTION

# JWT Security Configuration
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_64_CHAR_RANDOM_STRING_123456789012345678901234
JWT_REFRESH_SECRET=CHANGE_THIS_IN_PRODUCTION_64_CHAR_REFRESH_STRING_123456789012345678
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database Encryption Keys (32 bytes each, hex encoded)
DATABASE_ENCRYPTION_KEY=CHANGE_THIS_32_BYTE_HEX_KEY_1234567890ABCDEF1234567890ABCDEF
FIELD_ENCRYPTION_KEY=CHANGE_THIS_32_BYTE_HEX_KEY_FEDCBA0987654321FEDCBA0987654321
INTEGRITY_SECRET=CHANGE_THIS_INTEGRITY_SECRET_FOR_TRANSACTION_VALIDATION_12345

# CSRF Protection
CSRF_SECRET=CHANGE_THIS_CSRF_SECRET_FOR_TOKEN_GENERATION_987654321

# Application Security
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,https://your-domain.com
SECURE_COOKIES=true
SESSION_TIMEOUT=30m

# Rate Limiting Configuration
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5
TRANSACTION_RATE_LIMIT_WINDOW_MS=60000
TRANSACTION_RATE_LIMIT_MAX=10
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=100

# PCI-DSS Compliance Settings
PCI_COMPLIANCE_MODE=true
PAYMENT_PROCESSOR_URL=https://secure-payment-processor.com
PAYMENT_PROCESSOR_KEY=CHANGE_THIS_PAYMENT_PROCESSOR_KEY
PAYMENT_AUDIT_LEVEL=high

# Security Monitoring
SECURITY_LOG_LEVEL=high
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for financial compliance
FAILED_LOGIN_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION_MS=1800000  # 30 minutes
SUSPICIOUS_ACTIVITY_THRESHOLD=70

# Database Security
DATABASE_CONNECTION_ENCRYPTION=true
DATABASE_AUDIT_LOGGING=true
DATABASE_FIELD_ENCRYPTION=true

# File Upload Security
MAX_FILE_SIZE=1048576  # 1MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
FILE_SCAN_ENABLED=true

# Network Security
HTTPS_ONLY=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=true

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_DETECTION_THRESHOLD=70
UNUSUAL_TRANSACTION_AMOUNT=1000
RAPID_TRANSACTION_COUNT=5
RAPID_TRANSACTION_WINDOW_MS=300000  # 5 minutes

# Compliance Settings
SOX_COMPLIANCE=true
PCI_DSS_LEVEL=1
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true

# Backup and Recovery
ENCRYPTED_BACKUPS=true
BACKUP_RETENTION_DAYS=2555  # 7 years
DISASTER_RECOVERY_ENABLED=true

# Environment Classification
NODE_ENV=production
SECURITY_LEVEL=enterprise
COMPLIANCE_MODE=financial