{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "@admin/*": ["./src/admin-app/*"],
      "@pos/*": ["./src/pos-app/*"],
      "@shared/*": ["./src/shared/*"],
      "@api/*": ["./src/api/*"]
    }
  },
  "include": [
    "src/api/**/*",
    "src/shared/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist", 
    "src/tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/admin-app/**/*",
    "src/pos-app/**/*"
  ]
}