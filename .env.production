# Production Environment Configuration for JustSell POS
# Copy this file to .env and update with your production values

# Application
NODE_ENV=production
PORT=3000
API_URL=https://your-domain.com

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=justsell_pos
DB_USER=justsell
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public&connect_timeout=60

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
REDIS_URL=redis://default:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# Security
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_RANDOM_64_CHAR_STRING
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_64_CHAR_STRING

# Encryption
ENCRYPTION_KEY=CHANGE_THIS_TO_32_CHARACTER_KEY

# CORS
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/app/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true
AUDIT_LOG_DIR=/app/logs/audit
LOG_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@your-domain.com

# QuickBooks Integration (Optional)
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
QUICKBOOKS_REDIRECT_URI=https://your-domain.com/api/quickbooks/callback
QUICKBOOKS_ENVIRONMENT=production
QUICKBOOKS_WEBHOOK_TOKEN=

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Performance
NODE_OPTIONS=--max-old-space-size=2048
CLUSTER_WORKERS=2

# Feature Flags
ENABLE_QUICKBOOKS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_BACKUP=true
ENABLE_MONITORING=false
MAINTENANCE_MODE=false